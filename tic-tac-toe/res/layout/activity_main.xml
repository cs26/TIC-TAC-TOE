<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/tic" >

    <Button
        android:id="@+id/b2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/a2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_marginBottom="16dp"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/c2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignLeft="@+id/b2"
        android:layout_below="@+id/b2"
        android:layout_marginTop="16dp"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/a1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/a2"
        android:layout_alignBottom="@+id/a2"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/a2"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/a3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/a2"
        android:layout_alignBottom="@+id/a2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/a2"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/b1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/c2"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/b2"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/b3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/c2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/b2"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/c1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/c2"
        android:layout_alignBottom="@+id/c2"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/c2"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/c3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/c2"
        android:layout_alignBottom="@+id/c2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/c2"
        android:background="#33b5e5" />

    <Button
        android:id="@+id/exit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nwgame"
        android:layout_alignBottom="@+id/nwgame"
        android:layout_toRightOf="@+id/c2"
        android:text="@string/exit"
        />

    <Button
        android:id="@+id/nwgame"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/c1"
        android:layout_below="@+id/c1"
        android:layout_marginTop="26dp"
        android:text="@string/nwgame"
        android:textSize="13sp" />

</RelativeLayout>
